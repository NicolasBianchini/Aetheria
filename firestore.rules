rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para usuários - acesso público para desenvolvimento
    match /users/{userId} {
      // Permitir leitura e escrita pública (apenas para desenvolvimento)
      allow read, write: if true;
    }
    
    // Regras para sessões de jogos - acesso público
    match /sessions/{sessionId} {
      allow read, write: if true;
    }
    
    // Regras para pontuações - acesso público
    match /scores/{scoreId} {
      allow read, write: if true;
    }
    
    // Regras para pacientes - acesso público
    match /patients/{patientId} {
      allow read, write: if true;
    }
    
    // Regras para configurações do app - acesso público
    match /config/{configId} {
      allow read, write: if true;
    }
    
    // Regras para logs de sistema - acesso público
    match /logs/{logId} {
      allow read, write: if true;
    }
    
    // Regras para notificações - acesso público
    match /notifications/{notificationId} {
      allow read, write: if true;
    }
    
    // Regras para backup de dados - acesso público
    match /backups/{backupId} {
      allow read, write: if true;
    }
    
    // Regra padrão: permitir acesso a qualquer documento
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
